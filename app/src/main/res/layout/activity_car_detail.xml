<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/textColorWhite"
    tools:context=".CarDetailActivity">

    <include
        android:id="@+id/toolbar_layout"
        layout="@layout/toolbar_layout" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_below="@+id/toolbar_layout"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="match_parent"
            android:paddingBottom="24dp"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/model_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/vertical_margin_16"
                android:layout_marginStart="@dimen/vertical_margin_16"
                android:layout_marginTop="@dimen/horizontal_margin_16"
                android:ellipsize="end"
                android:maxLines="2"
                android:textColor="@color/colorBottom_navigation_text"
                android:textSize="@dimen/tv_16"
                android:textStyle="bold" />

            <View
                android:id="@+id/view"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_below="@+id/model_tv"
                android:layout_marginEnd="@dimen/vertical_margin_16"
                android:layout_marginStart="@dimen/vertical_margin_16"
                android:layout_marginTop="@dimen/horizontal_margin_10"
                android:background="@color/colorBottom_navigation_text" />

            <TextView
                android:id="@+id/color_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/view"
                android:layout_marginEnd="@dimen/vertical_margin_16"
                android:layout_marginStart="@dimen/vertical_margin_16"
                android:layout_marginTop="@dimen/horizontal_margin_16"
                android:singleLine="true"
                android:textColor="@color/textColorPrimary"
                android:textSize="@dimen/tv_16"
                android:textStyle="normal" />

            <TextView
                android:id="@+id/engine_power_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/color_tv"
                android:layout_marginEnd="@dimen/vertical_margin_16"
                android:layout_marginStart="@dimen/vertical_margin_16"
                android:layout_marginTop="@dimen/horizontal_margin_16"
                android:singleLine="true"
                android:textColor="@color/textColorPrimary"
                android:textSize="@dimen/tv_16"
                android:textStyle="normal" />

            <TextView
                android:id="@+id/fuel_type_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/engine_power_tv"
                android:layout_marginEnd="@dimen/vertical_margin_16"
                android:layout_marginStart="@dimen/vertical_margin_16"
                android:layout_marginTop="@dimen/horizontal_margin_16"
                android:singleLine="true"
                android:textColor="@color/textColorPrimary"
                android:textSize="@dimen/tv_16"
                android:textStyle="normal" />

            <TextView
                android:id="@+id/mileage_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/fuel_type_tv"
                android:layout_marginEnd="@dimen/vertical_margin_16"
                android:layout_marginStart="@dimen/vertical_margin_16"
                android:layout_marginTop="@dimen/horizontal_margin_16"
                android:singleLine="true"
                android:textColor="@color/textColorPrimary"
                android:textSize="@dimen/tv_16"
                android:textStyle="normal" />

            <TextView
                android:id="@+id/selling_price_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/mileage_tv"
                android:layout_marginEnd="@dimen/vertical_margin_16"
                android:layout_marginStart="@dimen/vertical_margin_16"
                android:layout_marginTop="@dimen/horizontal_margin_16"
                android:singleLine="true"
                android:textColor="@color/textColorPrimary"
                android:textSize="@dimen/tv_16"
                android:textStyle="normal" />

            <TextView
                android:id="@+id/car_description_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/selling_price_tv"
                android:layout_marginEnd="@dimen/vertical_margin_16"
                android:layout_marginStart="@dimen/vertical_margin_16"
                android:layout_marginTop="@dimen/horizontal_margin_16"
                android:textColor="@color/textColorPrimary"
                android:textSize="@dimen/tv_16"
                android:textStyle="normal" />
        </RelativeLayout>
    </ScrollView>
</RelativeLayout>