<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="300dp"
    android:layout_marginBottom="@dimen/horizontal_margin_10"
    android:layout_marginEnd="@dimen/vertical_margin_16"
    android:layout_marginStart="@dimen/vertical_margin_16"
    android:layout_marginTop="@dimen/horizontal_margin_10"
    android:background="@color/textColorWhite"
    app:cardCornerRadius="6dp"
    app:elevation="6dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <TextView
            android:id="@+id/model_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/vertical_margin_16"
            android:layout_marginStart="@dimen/vertical_margin_16"
            android:layout_marginTop="@dimen/horizontal_margin_16"
            android:ellipsize="end"
            android:maxLines="2"
            android:textColor="@color/colorBottom_navigation_text"
            android:textSize="@dimen/tv_16"
            android:textStyle="bold" />

        <View
            android:id="@+id/view"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@+id/model_tv"
            android:layout_marginEnd="@dimen/vertical_margin_16"
            android:layout_marginStart="@dimen/vertical_margin_16"
            android:layout_marginTop="@dimen/horizontal_margin_10"
            android:background="@color/colorBottom_navigation_text" />

        <TextView
            android:id="@+id/color_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/view"
            android:layout_marginEnd="@dimen/vertical_margin_16"
            android:layout_marginStart="@dimen/vertical_margin_16"
            android:layout_marginTop="@dimen/horizontal_margin_16"
            android:singleLine="true"
            android:textColor="@color/textColorPrimary"
            android:textSize="@dimen/tv_16"
            android:textStyle="normal" />

        <TextView
            android:id="@+id/engine_power_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/color_tv"
            android:layout_marginEnd="@dimen/vertical_margin_16"
            android:layout_marginStart="@dimen/vertical_margin_16"
            android:layout_marginTop="@dimen/horizontal_margin_16"
            android:singleLine="true"
            android:textColor="@color/textColorPrimary"
            android:textSize="@dimen/tv_16"
            android:textStyle="normal" />

        <TextView
            android:id="@+id/fuel_type_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/engine_power_tv"
            android:layout_marginEnd="@dimen/vertical_margin_16"
            android:layout_marginStart="@dimen/vertical_margin_16"
            android:layout_marginTop="@dimen/horizontal_margin_16"
            android:singleLine="true"
            android:textColor="@color/textColorPrimary"
            android:textSize="@dimen/tv_16"
            android:textStyle="normal" />

        <TextView
            android:id="@+id/car_description_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/fuel_type_tv"
            android:layout_marginEnd="@dimen/vertical_margin_16"
            android:layout_marginStart="@dimen/vertical_margin_16"
            android:layout_marginTop="@dimen/horizontal_margin_16"
            android:maxLines="4"
            android:textColor="@color/textColorPrimary"
            android:textSize="@dimen/tv_16"
            android:textStyle="normal" />

        <TextView
            android:id="@+id/more_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_below="@+id/car_description_tv"
            android:layout_marginEnd="@dimen/vertical_margin_16"
            android:layout_marginTop="2dp"
            android:text="@string/more"
            android:visibility="visible"
            android:textColor="@color/colorBottom_navigation_text"
            android:textSize="@dimen/tv_12" />

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_alignParentBottom="true"
            android:background="@color/colorBottom_navigation_text" />
    </RelativeLayout>
</android.support.v7.widget.CardView>